{
  "name": "hermes-notes",
  "version": "1.0.0",
  "description": "HermesNotes - Language learning flashcards with spaced repetition for English B1/B2 conversation practice",
  "author": {
    "name": "mascarpone"
  },
  "license": "ISC",
  "keywords": [
    "flashcards",
    "language-learning",
    "english",
    "spaced-repetition",
    "nextjs",
    "chakra-ui",
    "typescript"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prettier": "prettier src --check .",
    "lint": "eslint",
    "lint-staged": "lint-staged",
    "husky-install": "husky install",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit && eslint --fix . && prettier --write .",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run && cypress run --component"
  },
  "dependencies": {
    "@chakra-ui/react": "3.30.0",
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "framer-motion": "12.23.26",
    "lucide-react": "0.561.0",
    "next": "16.0.10",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@babel/core": "7.28.5",
    "@babel/preset-react": "7.28.5",
    "@babel/preset-typescript": "7.28.5",
    "@types/node": "25.0.0",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "8.50.1",
    "babel-loader": "10.0.0",
    "cypress": "15.8.0",
    "eslint": "9.39.1",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-next": "16.0.10",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "process": "0.11.10",
    "typescript": "5.9.3",
    "webpack": "5.104.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,md,html}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
